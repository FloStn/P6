{% extends 'layout.html.twig' %}

{% block main %}

    <div class="col-md-12">
        <h1>Réinitialiser le mot de passe</h1>
    </div>
    <br>
    <div class="col-md-6">
        {{ form_start(user_form) }}
        <br>
        {{ form_label(user_form.email, 'Email') }}
        <br>
        {{ form_widget(user_form.email) }}
        <br>
        {{ form_label(user_form.rawPassword.first) }}
        <br>
        {{ form_widget(user_form.rawPassword.first) }}
        <br>
        {{ form_label(user_form.rawPassword.second) }}
        <br>
        {{ form_widget(user_form.rawPassword.second) }}
        <br>
        <button type="submit" class="btn btn-light">Réinitialiser le mot de passe</button>
        {{ form_row(user_form._token) }}
        {{ form_end(user_form, {'render_rest': false}) }}
    </div>
    
{% endblock %}
