        <!--Grid row-->
        <div id="tricks" class="row">

{% for trick in tricks %}

<div class="col-lg-3 col-md-12 mb-3">

<div class="card">

  <!-- Card image -->
  <div class="view overlay">
    <img class="card-img-top" src={{ '../../img/' ~ trick.getImages['0'].url }} alt={{ trick.getImages['0'].alt }}></img>
    <a href="http://www.openclassrooms.com">
      <div class="mask rgba-white-slight"></div>
    </a>
  </div>

  <!-- Card content -->
  <div class="card-body">
    <div class="row">
      <div class="col-md-6 text-center">
        <!-- Title -->
        <h4 class="card-title" style="font-size: 1.1rem;">{{ trick.name }}</h4>
      </div>
      <div class="mx-auto col-md-6 text-right text-sm-right">
        <a class="fas fa-pen"></a>
        <a class="fas fa-trash-alt text-danger" data-toggle="modal" data-target="#modalConfirmDelete"></a>
      </div>
    </div>

  </div>
</div>
</div>

{% endfor %}

